; RUN: llc -mcpu=kv3-1 < %s | FileCheck %s

target triple = "kvx-kalray-cos"

define float @f32_add_imm(float %f) {
; CHECK-LABEL: f32_add_imm:
; CHECK:       # %bb.0: # %entry
; CHECK-NEXT:    faddw $r0 = $r0, 0x3f800000
; CHECK-NEXT:    ret
; CHECK-NEXT:    ;;
entry:
  %add = fadd float %f, 1.000000e+00
  ret float %add
}

define double @f64_add_imm(double %d) {
; CHECK-LABEL: f64_add_imm:
; CHECK:       # %bb.0: # %entry
; CHECK-NEXT:    faddd $r0 = $r0, 0x3ff0000000000000
; CHECK-NEXT:    ret
; CHECK-NEXT:    ;;
entry:
  %add = fadd double %d, 1.000000e+00
  ret double %add
}

define float @f32_comp_imm(float %f) {
; CHECK-LABEL: f32_comp_imm:
; CHECK:       # %bb.0: # %entry
; CHECK-NEXT:    fcompw.une $r2 = $r0, 0x3f800000
; CHECK-NEXT:    fnegw $r1 = $r0
; CHECK-NEXT:    ;;
; CHECK-NEXT:    cmoved.wnez $r2 ? $r1 = $r0
; CHECK-NEXT:    ;;
; CHECK-NEXT:    copyd $r0 = $r1
; CHECK-NEXT:    ret
; CHECK-NEXT:    ;;
entry:
  %cmp = fcmp une float %f, 1.000000e+00
  %fneg = fneg float %f
  %retval.0 = select i1 %cmp, float %f, float %fneg
  ret float %retval.0
}
