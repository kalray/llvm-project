; RUN: clang -mllvm -disable-kvx-hwloops=false -O3 -c -o /dev/null %s

target triple = "kvx-kalray-cos"

; This test ensures that we can still hwloop an internal loop
; from an external infinite loop such as, in C:
; -----
; a, b;
; *c;
; d() {
;   c = a;
;   for (;;) {
;     for (int e = 0; e < 2000; e++)
;       b = c[e];
;     f();
;   }
; }
; -----

@a = common global i32 0, align 4
@c = common global ptr null, align 8
@b = common global i32 0, align 4

define i32 @d() {
; CHECK-LABEL: d:
; CHECK:       # %bb.0: # %entry
; CHECK-NEXT:    make $r0 = a
; CHECK-NEXT:    addd $r12 = $r12, -32
; CHECK-NEXT:    get $r16 = $ra
; CHECK-NEXT:    ;; # (end cycle 0)
; CHECK-NEXT:    sd 24[$r12] = $r16
; CHECK-NEXT:    ;; # (end cycle 1)
; CHECK-NEXT:    sd 16[$r12] = $r20
; CHECK-NEXT:    make $r20 = b
; CHECK-NEXT:    ;; # (end cycle 2)
; CHECK-NEXT:    sq 0[$r12] = $r18r19
; CHECK-NEXT:    make $r18 = c
; CHECK-NEXT:    make $r19 = 0x7d0
; CHECK-NEXT:    ;; # (end cycle 3)
; CHECK-NEXT:    lws $r0 = 0[$r0]
; CHECK-NEXT:    ;; # (end cycle 4)
; CHECK-NEXT:    sd 0[$r18] = $r0
; CHECK-NEXT:    ;; # (end cycle 6)
; CHECK-NEXT:  .LBB0_1: # %for.cond
; CHECK-NEXT:    # =>This Loop Header: Depth=1
; CHECK-NEXT:    # Child Loop BB0_2 Depth 2
; CHECK-NEXT:    make $r1 = 0
; CHECK-NEXT:    ;; # (end cycle 0)
; CHECK-NEXT:    loopdo $r19, .__LOOPDO_0_END_
; CHECK-NEXT:    ;;
; CHECK-NEXT:  .LBB0_2: # %for.body
; CHECK-NEXT:    # Parent Loop BB0_1 Depth=1
; CHECK-NEXT:    # => This Inner Loop Header: Depth=2
; CHECK-NEXT:    addd $r1 = $r1, 1
; CHECK-NEXT:    lwz.xs $r2 = $r1[$r0]
; CHECK-NEXT:    ;; # (end cycle 0)
; CHECK-NEXT:    sw 0[$r20] = $r2
; CHECK-NEXT:    ;; # (end cycle 2)
; CHECK-NEXT:  .__LOOPDO_0_END_:
; CHECK-NEXT:  # %bb.3: # %for.body.split
; CHECK-NEXT:    # in Loop: Header=BB0_1 Depth=1
; CHECK-NEXT:    call f
; CHECK-NEXT:    ;;
; CHECK-NEXT:    ld $r0 = 0[$r18]
; CHECK-NEXT:    goto .LBB0_1
; CHECK-NEXT:    ;; # (end cycle 0)
entry:
  %0 = load i32, ptr @a, align 4
  %conv = sext i32 %0 to i64
  %1 = inttoptr i64 %conv to ptr
  store ptr %1, ptr @c, align 8
  br label %for.cond

for.cond:
  %2 = phi ptr [ %.pre, %for.cond.cleanup ], [ %1, %entry ]
  br label %for.body

for.cond.cleanup:
  %call = tail call i32 bitcast (i32 (...)* @f to i32 ()*)()
  %.pre = load ptr, ptr @c, align 8
  br label %for.cond

for.body:
  %indvars.iv = phi i64 [ 0, %for.cond ], [ %indvars.iv.next, %for.body ]
  %arrayidx = getelementptr inbounds i32, ptr %2, i64 %indvars.iv
  %3 = load i32, ptr %arrayidx, align 4
  store i32 %3, ptr @b, align 4
  %indvars.iv.next = add nuw nsw i64 %indvars.iv, 1
  %exitcond = icmp eq i64 %indvars.iv.next, 2000
  br i1 %exitcond, label %for.cond.cleanup, label %for.body
}

declare i32 @f(...)
