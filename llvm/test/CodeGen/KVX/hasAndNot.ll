target triple = "kvx-kalray-cos"

define i32 @pos_sel_constants(i32 %a) {
; CHECK-LABEL: pos_sel_constants:
; CHECK:       # %bb.0:
; CHECK-NEXT:    sraw $r0 = $r0, 31
; CHECK-NEXT:    ;;
; CHECK-NEXT:    andnw $r0 = $r0, 5
; CHECK-NEXT:    ret
; CHECK-NEXT:    ;;
